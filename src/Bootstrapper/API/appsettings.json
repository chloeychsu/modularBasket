{
  "ConnectionStrings": {
    "Database": "Server=localhost;Port=5432;Database=basketdb;User Id=postgres;Password=postgres;Include Error Detail=true"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console","Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl":"http://localhost:5341"
        }
      }
    ],
    "Enrich": ["FromLogContext","WithMachineName","WithProcessId","WithThreadId"],
    "Properties": {
      "Application": "ModularBasket ASP.NET Core App",
      "Evironment": "Development"
    }
  }, 
  "AllowedHosts": "*"
}